<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_default"
            android:elevation="4dp">

            <TextView
                android:id="@+id/adminTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center"
                android:text="Admin"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/extraTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:text="C1:Đây là danh lam thắng cảnh ở đâu?"
            android:textColor="@color/color_default"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@color/grey_800"/>

        <LinearLayout
            android:id="@+id/buttonLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extraTextView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePeople"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_people_group"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/num_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/color_default"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonBarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extraTextView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/buttonLinearLayout">

            <Button
                android:id="@+id/btnTab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu hỏi hiện tại"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnTab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem biểu đồ"
                android:layout_toEndOf="@+id/btnTab1" />

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/buttonBarLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tabLayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- Add fragments for each tab in the ViewPager -->

        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/viewPager"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/grey_800"
            android:padding="16dp">

            <!-- Left TextView -->
            <TextView
                android:id="@+id/footerLeftTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QUIZ"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/color_default"/>

            <!-- Right TextView -->
            <TextView
                android:id="@+id/footerRightTextView"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:hint="906487"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="70dp"
                android:background="@drawable/edit_text_boder" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
