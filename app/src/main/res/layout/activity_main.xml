<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="0dp">

    <!-- Main content layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar at the top -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2A287A"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Trang chủ"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>


        <!-- Quiz Image -->
        <ImageView
            android:id="@+id/quizImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/toolbar"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <!-- Quizz Text -->
        <TextView
            android:id="@+id/quizzText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Quizz"
            android:textColor="#000000"
            android:textSize="24sp" />

        <!-- Buttons below the Text -->
        <Button
            android:id="@+id/btnCreateRoom"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/quizzText"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/quizzText"
            android:text="Tạo Phòng"
            android:textSize="10sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:backgroundTint="#2A287A"
            android:textColor="#FFFFFF"
            android:layout_marginLeft ="20dp" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/quizzText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/quizzText"
            android:backgroundTint="#2A287A"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Tham gia"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />


        <!-- Bottom Navigation Layout -->
        <LinearLayout
            android:id="@+id/bottomNavLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Home Icon Button -->
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#2A287A"
                android:contentDescription=" "
                android:src="@drawable/ic_home" />

            <!-- Quiz Icon Button -->
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#2A287A"
                android:contentDescription=" "
                android:src="@drawable/ic_quiz" />

            <!-- Play Icon Button -->
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#2A287A"
                android:contentDescription=" "
                android:src="@drawable/ic_play" />

            <!-- Book Icon Button -->
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#2A287A"
                android:contentDescription=" "
                android:src="@drawable/ic_book" />

        </LinearLayout>

    </RelativeLayout>

    <!-- NavigationView for Drawer items -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>