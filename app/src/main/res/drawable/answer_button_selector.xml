<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#5A5A5A"/> <!-- Adjust color for pressed state -->
        </shape>
    </item>
    <!-- When the button is selected/focused -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#303F9F"/> <!-- Adjust color for selected state -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#3F51B5"/> <!-- Adjust color for normal state -->
        </shape>
    </item>
</selector>
